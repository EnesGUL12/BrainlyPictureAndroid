<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack"
        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/scrollMain"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarSize="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:orientation="vertical">
            // SETTINGS PAGE

            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorSettBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/linearLayout">
                <Button
                        android:background="@color/colorSettBack"
                        android:text="SETTINGS"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/colorSettButtText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttSettings"/>
                <LinearLayout
                        android:id="@+id/pageSettings"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">
                    <TextView
                            android:text="Disconnected"
                            android:background="@color/colorSettConnOFF"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textColor="@color/colorSettConnText"
                            android:layout_marginLeft="120dp"
                            android:layout_width="158dp"
                            android:layout_height="38dp" android:id="@+id/textConnect"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/icon_brighness"
                                android:id="@+id/imageView"/>
                        <SeekBar
                                android:layout_marginTop="5dp"
                                android:progress="100"
                                android:max="200"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekBrightness"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            // ONE COLOR PAGE
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorOneColorBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/linearLayout2">
                <Button
                        android:text="ONE COLOR"
                        android:textStyle="bold"
                        android:textColor="@color/colorOneColorText"
                        android:textSize="30sp"
                        android:background="@color/colorOneColorBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttOneColor"/>
                <LinearLayout
                        android:id="@+id/pageOneColor"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Setting:"
                                android:textColor="@color/colorOneColorText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                        <Spinner
                                android:layout_marginLeft="5dp"
                                android:layout_width="140dp"
                                android:entries="@array/spinner_one_color"
                                android:layout_height="wrap_content" android:id="@+id/spinnerOneColorMode"/>
                    </LinearLayout>
                    // RED
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="RED"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView9"/>
                        <SeekBar
                                android:max="255"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekRed"/>
                    </LinearLayout>

                    // GREEN
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="GREEN"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_green_dark"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView10"/>
                        <SeekBar
                                android:max="255"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekBlue"/>
                    </LinearLayout>

                    // BLUE
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="BLUE"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView11"/>
                        <SeekBar
                                android:max="255"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekGreen"/>
                    </LinearLayout>

                    <com.skydoves.colorpickerview.ColorPickerView
                            android:id="@+id/colorPicker"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            app:palette="@drawable/palette"
                            app:selector="@drawable/wheel"/>
                </LinearLayout>

            </LinearLayout>


            // EFFECTS PIC

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPicEffectsBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="PICTURE EFFECTS"
                        android:background="@color/colorPicEffectsBack"
                        android:textColor="@color/colorPicEffectsText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttPicEffects"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pagePicEffects"
                        android:background="@color/colorPicEffectsBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Brightness:"
                                android:textColor="@color/colorPicEffectsText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView5"/>
                        <SeekBar
                                android:max="200"
                                android:progress="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekPicBrightness"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Color HSV:"
                                android:textColor="@color/colorPicEffectsText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView7"/>
                        <SeekBar
                                android:background="@drawable/hsv_line"
                                android:max="255"
                                android:progress="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekPicColorHSV"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Speed:"
                                android:textColor="@color/colorPicEffectsText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView2"/>
                        <SeekBar
                                android:max="100"
                                android:progress="10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekPicSpeed"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Effect:"
                                android:textColor="@color/colorPicEffectsText"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" android:id="@+id/textView"
                                android:textSize="20sp"/>
                        <Spinner
                                android:layout_marginLeft="4dp"
                                android:spinnerMode="dropdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/spinnerPicEffects"
                                android:entries="@array/spinner_effects"/>
                        <ImageView
                                android:layout_marginLeft="50dp"
                                android:layout_width="39dp"
                                android:layout_height="39dp"
                                app:srcCompat="@drawable/icon_search" android:id="@+id/imageEffects"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            // WALL EFFECTS

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWallEffectsBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="WALL EFFECTS"
                        android:background="@color/colorWallEffectsBack"
                        android:textColor="@color/colorWallEffectsText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttWallEffects"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pageEffectsWall"
                        android:background="@color/colorWallEffectsBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Brightness:"
                                android:textColor="@color/colorWallEffectsText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView15"/>
                        <SeekBar
                                android:max="200"
                                android:progress="200"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekWallBrightness"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Color HSV:"
                                android:textColor="@color/colorWallEffectsText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView8"/>
                        <SeekBar
                                android:background="@drawable/hsv_line"
                                android:max="255"
                                android:progress="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekWallColorHSV"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Speed:"
                                android:textColor="@color/colorWallEffectsText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView13"/>
                        <SeekBar
                                android:max="100"
                                android:progress="10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekWallSpeed"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Effect:"
                                android:textColor="@color/colorWallEffectsText"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" android:id="@+id/textView12"
                                android:textSize="20sp"/>
                        <Spinner
                                android:layout_marginLeft="4dp"
                                android:spinnerMode="dropdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/spinnerWallEffects"
                                android:entries="@array/spinner_effects"/>
                        <ImageView
                                android:layout_marginLeft="50dp"
                                android:layout_width="39dp"
                                android:layout_height="39dp"
                                app:srcCompat="@drawable/icon_search" android:id="@+id/imageWallEffects"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            // AUTOMATION
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPicAutoBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="Automation"
                        android:background="@color/colorPicAutoBack"
                        android:textColor="@color/colorPicAutoText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttPicAuto"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pagePicAuto"
                        android:background="@color/colorPicAutoBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ToggleButton
                            android:text="ToggleButton"
                            android:background="@color/colorPicAutoToggle"
                            android:textColor="@color/colorPicAutoText"
                            android:layout_marginLeft="160dp"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" android:id="@+id/togglePicAuto"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginBottom="10dp"
                                android:text="Time, after which effects"
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textPicAutoTime"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_marginLeft="60dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:text="Turn on:"
                                        android:textSize="20sp"
                                        android:textColor="@color/colorPicAutoText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView18"/>
                                <Button
                                        android:text="Choose"
                                        android:background="@color/colorPicAutoButtTime"
                                        android:textColor="@color/colorPicAutoButtTimeText"
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/buttPicAutoStartTime"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_marginLeft="100dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:text="Turn off:"
                                        android:textSize="20sp"
                                        android:textColor="@color/colorPicAutoText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView23"/>
                                <Button
                                        android:text="Choose"
                                        android:background="@color/colorPicAutoButtTime"
                                        android:textColor="@color/colorPicAutoButtTimeText"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/buttPicAutoEndTime"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Choose:"
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView17"/>
                        <SeekBar
                                style="@style/Widget.AppCompat.SeekBar.Discrete"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="10"
                                android:progress="5"
                                android:id="@+id/seekPicAutoTimer"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Effect will change through:"
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView22"/>
                        <TextView
                                android:text=""
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoTextTime"
                                android:layout_width="25dp"
                                android:layout_height="wrap_content" android:id="@+id/textPicAutoTimer"/>
                        <TextView
                                android:text="min"
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView24"/>
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Place:"
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView14"/>
                        <Spinner
                                android:entries="@array/spinner_place"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" android:id="@+id/spinnerPlace"/>
                        <TextView
                                android:text="Effect:"
                                android:textSize="20sp"
                                android:textColor="@color/colorPicAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView16"/>
                        <Spinner
                                android:entries="@array/spinner_effects"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content" android:id="@+id/spinnerEffectAuto"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Brightness:"
                                android:textColor="@color/colorPicAutoText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView19"/>
                        <SeekBar
                                android:max="200"
                                android:progress="200"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekPicAutoBrightness"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Color HSV:"
                                android:textColor="@color/colorPicAutoText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView21"/>
                        <SeekBar
                                android:background="@drawable/hsv_line"
                                android:max="255"
                                android:progress="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekPicAutoColorHSV"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Speed:"
                                android:textColor="@color/colorPicAutoText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView20"/>
                        <SeekBar
                                android:max="100"
                                android:progress="10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekPicAutoSpeed"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            // AUTOMATION
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorWallAutoBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="Automation"
                        android:background="@color/colorWallAutoBack"
                        android:textColor="@color/colorWallAutoText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttWallAuto"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pageWallAuto"
                        android:background="@color/colorWallAutoBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ToggleButton
                            android:text="ToggleButton"
                            android:background="@color/colorWallAutoToggle"
                            android:textColor="@color/colorWallAutoText"
                            android:layout_marginLeft="160dp"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content" android:id="@+id/toggleWallAuto"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:layout_marginLeft="70dp"
                                android:layout_marginBottom="10dp"
                                android:text="Time, after which effects"
                                android:textSize="20sp"
                                android:textColor="@color/colorWallAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textWallAutoTime"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_marginLeft="60dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:text="Turn on:"
                                        android:textSize="20sp"
                                        android:textColor="@color/colorWallAutoText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView25"/>
                                <Button
                                        android:text="Choose"
                                        android:background="@color/colorWallAutoButtTime"
                                        android:textColor="@color/colorWallAutoButtTimeText"
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/buttWallAutoStartTime"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_marginLeft="100dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:text="Turn off:"
                                        android:textSize="20sp"
                                        android:textColor="@color/colorWallAutoText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/textView28"/>
                                <Button
                                        android:text="Choose"
                                        android:background="@color/colorWallAutoButtTime"
                                        android:textColor="@color/colorWallAutoButtTimeText"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/buttWallAutoEndTime"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Choose:"
                                android:textSize="20sp"
                                android:textColor="@color/colorWallAutoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView26"/>
                        <SeekBar
