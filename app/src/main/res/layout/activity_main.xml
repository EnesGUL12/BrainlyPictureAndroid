<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack"
        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/scrollMain"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarSize="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarThumbVertical="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:orientation="vertical">
            // SETTINGS PAGE

            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorSettBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/linearLayout">
                <Button
                        android:background="@color/colorSettBack"
                        android:text="SETTINGS"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/colorSettButtText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttSettings"/>
                <LinearLayout
                        android:id="@+id/pageSettings"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">
                    <TextView
                            android:text="Disconnected"
                            android:background="@color/colorSettConnOFF"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textColor="@color/colorSettConnText"
                            android:layout_marginLeft="120dp"
                            android:layout_width="158dp"
                            android:layout_height="38dp" android:id="@+id/textConnect"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/icon_brighness"
                                android:id="@+id/imageView"/>
                        <SeekBar
                                android:layout_marginTop="5dp"
                                android:progress="100"
                                android:max="200"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekBrightness"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            // ONE COLOR PAGE
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorOneColorBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/linearLayout2">
                <Button
                        android:text="ONE COLOR"
                        android:textStyle="bold"
                        android:textColor="@color/colorOneColorText"
                        android:textSize="30sp"
                        android:background="@color/colorOneColorBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttOneColor"/>
                <LinearLayout
                        android:id="@+id/pageOneColor"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Managing:"
                                android:textColor="@color/colorOneColorText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                        <Spinner
                                android:layout_marginLeft="5dp"
                                android:layout_width="140dp"
                                android:entries="@array/spinner_one_color"
                                android:layout_height="wrap_content" android:id="@+id/spinnerOneColorMode"/>
                    </LinearLayout>
                    // RED
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="RED"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView9"/>
                        <SeekBar
                                android:max="255"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekRed"/>
                    </LinearLayout>

                    // GREEN
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="GREEN"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_green_dark"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView10"/>
                        <SeekBar
                                android:max="255"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekBlue"/>
                    </LinearLayout>

                    // BLUE
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="BLUE"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView11"/>
                        <SeekBar
                                android:max="255"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekGreen"/>
                    </LinearLayout>

                    <com.skydoves.colorpickerview.ColorPickerView
                            android:id="@+id/colorPicker"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            app:palette="@drawable/palette"
                            app:selector="@drawable/wheel"/>
                </LinearLayout>

            </LinearLayout>


            // EFFECTS

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorEffectsPicBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="PICTURE EFFECTS"
                        android:background="@color/colorEffectsPicBack"
                        android:textColor="@color/colorEffectsPicText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttEffects"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pageEffects"
                        android:background="@color/colorEffectsPicBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Brightness:"
                                android:textColor="@color/colorEffectsPicText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView5"/>
                        <SeekBar
                                android:max = "200"
                                android:progress="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekBrightnessPic"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Color HSV:"
                                android:textColor="@color/colorEffectsPicText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView7"/>
                        <SeekBar
                                android:background="@drawable/hsv_line"
                                android:max="255"
                                android:progress="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekColorHSV"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Speed:"
                                android:textColor="@color/colorEffectsPicText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView2"/>
                        <SeekBar
                                android:max="100"
                                android:progress="10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekSpeed"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Effect:"
                                android:textColor="@color/colorEffectsPicText"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" android:id="@+id/textView"
                                android:textSize="20sp"/>
                        <Spinner
                                android:layout_marginLeft="4dp"
                                android:spinnerMode="dropdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/spinnerEffects"
                                android:entries="@array/spinner_effects"/>
                        <ImageView
                                android:layout_marginLeft="50dp"
                                android:layout_width="39dp"
                                android:layout_height="39dp"
                                app:srcCompat="@drawable/icon_search" android:id="@+id/imageEffects"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>




            // WALL EFFECTS

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorEffectsWallBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="WALL EFFECTS"
                        android:background="@color/colorEffectsWallBack"
                        android:textColor="@color/colorEffectsWallText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttEffectsWall"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pageEffectsWall"
                        android:background="@color/colorEffectsWallBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Brightness:"
                                android:textColor="@color/colorEffectsPicText"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView15"/>
                        <SeekBar
                                android:max ="200"
                                android:progress="100"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekBrightnessWall"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Color HSV:"
                                android:textColor="@color/colorEffectsWallText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView8"/>
                        <SeekBar
                                android:background="@drawable/hsv_line"
                                android:max="255"
                                android:progress="0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekColorHSVWall"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Speed:"
                                android:textColor="@color/colorEffectsWallText"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView13"/>
                        <SeekBar
                                android:max="100"
                                android:progress="10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/seekSpeedWall"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="Effect:"
                                android:textColor="@color/colorEffectsWallText"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" android:id="@+id/textView12"
                                android:textSize="20sp"/>
                        <Spinner
                                android:layout_marginLeft="4dp"
                                android:spinnerMode="dropdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/spinnerEffectsWall"
                                android:entries="@array/spinner_effects"/>
                        <ImageView
                                android:layout_marginLeft="50dp"
                                android:layout_width="39dp"
                                android:layout_height="39dp"
                                app:srcCompat="@drawable/icon_search" android:id="@+id/imageEffectsWall"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            // AUTOMATION
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorEffectsWallBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="Automation"
                        android:background="@color/colorAutoBack"
                        android:textColor="@color/colorAutoText"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/buttAuto"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/pageAuto"
                        android:background="@color/colorAutoBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:text="Place:"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorAutoText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView14"/>
                            <Spinner
                                    android:entries="@array/spinner_place"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content" android:id="@+id/spinnerPlace"/>
                            <TextView
                                    android:text="Effect:"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorAutoText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/textView16"/>
                            <Spinner
                                    android:entries="@array/spinner_effects"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content" android:id="@+id/spinnerEffectAuto"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
            android:layout_width="139dp"
            android:layout_height="19dp"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textTopic" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginRight="64dp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text=""
            android:layout_width="124dp"
            android:layout_height="19dp"
            android:id="@+id/textPayload"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Topic:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Payload:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/textTopic"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.056"/>


</androidx.constraintlayout.widget.ConstraintLayout>